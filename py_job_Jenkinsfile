#!groovy
pipeline {
    agent {
        kubernetes {
            yamlFile 'agent-pod.yaml'
        }
    }
    stages {
        stage('OS and py script validation') {
            steps {
                container('centospy') {
                    echo 'Printing OS type and checking if zip_job.py exists on /tmp folder: '
                    containerLog 'centospy'
                }
            }
        }
        stage('Run py script') {
            steps {
                container('centospy') {
                    sh 'python3 /tmp/zip_job.py'
                    archiveArtifacts artifacts: '*.zip', onlyIfSuccessful: true
                }
            }
        }
    }
}