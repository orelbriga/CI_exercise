#!groovy
pipeline {
    agent {
        kubernetes {
            yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: centospy
            image: orelbriga/centos-py:2
            resources:
                  limits:
                    memory: "8192Mi"
                  requests:
                    memory: "1024Mi"
            tty: true            
        '''
        }
    }
    stages {
        stage('OS and py script validation') {
            steps {
                container('centospy') {
                    containerLog 'centospy'
                }
            }
        }
        stage('Run py script') {
            steps {
                container('centospy') {
                    sh 'python3 /tmp/zip_job.py'
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: '*.zip', onlyIfSuccessful: true
        }
    }
}