#!groovy
pipeline {
    agent {
        kubernetes {
            yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: centospy
            image: orelbriga/centos-py:2
            resources:
                  limits:
                    memory: "8192Mi"
                  requests:
                    memory: "1024Mi"
            tty: true
            
        '''
        }
    }
    stages {
        stage('Run python script') {
            steps {
                container('centospy') {
                    containerLog 'centospy'
                    sh 'python3 /tmp/zip_job.py'
                }
            }
        }
        stage('Check ZIP files') {
            steps {
                container('centospy') {
                    sh 'echo found'
                }
            }
        }
        post {
            always {
                archiveArtifacts artifacts: 'generatedFile.txt', onlyIfSuccessful: true
            }
        }
    }
}