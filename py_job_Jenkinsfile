#!groovy
pipeline {
    agent {
        kubernetes {
            yamlFile 'agent-pod.yaml'
        }
    }
    stages {
        stage('OS and py script validation') {
            steps {
                container('centospy') {
                    echo 'Printing OS type and zip_job.py location: '
                    containerLog 'centospy'
                }
            }
        }
        stage('Run py script') {
            steps {
                container('centospy') {
                    sh 'python3 /tmp/zip_job.py'
                }
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: '*.zip', onlyIfSuccessful: true
        }
    }
}