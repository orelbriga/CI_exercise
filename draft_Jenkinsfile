#!groovy
pipeline {
    agent {
        kubernetes {
            yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: centospy
            image: orelbriga/centos-py:2
            resources:
                  limits:
                    memory: "8192Mi"
                  requests:
                    memory: "1024Mi"
            tty: true
          volumeMounts:
            - name: agent-data
              mountPath: /home/jenkins/agent/workspace
        volumes:
          - name: agent-data
            persistentVolumeClaim:
              claimName: jenkins-pv-claim
            
        '''
        }
    }
    stages {
        stage('Run python script') {
            steps {
                container('centospy') {
                    containerLog 'centospy'
                    sh 'python3 /tmp/zip_job.py'
                }
            }
        }
        stage('Check ZIP files') {
            steps {
                container('centospy') {
                    sh 'echo found'
                }
            }
        }
    }
}